---
interface Props {
  tags: Array<string>;
}

const { tags } = Astro.props;
---

<nav class="tags" aria-label="Tags used in blogposts">
  {
    tags.map((tag) => (
      <p class="tag">
        <a href={`/tags/${tag}`}>{tag}</a>
      </p>
    ))
  }
</nav>

<style>
  .tags {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    list-style: none;
    padding: 0;
  }

  .tag::before {
    content: "#";
  }
</style>
