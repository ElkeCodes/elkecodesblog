---
import Navigation from "./Navigation.astro";
---

<style>
  header {
    margin-top: 1rem;
  }
  @media screen and (min-width: 636px) {
    header {
      margin-top: 2rem;
    }
  }
  header .sitename-and-menu {
    display: flex;
    gap: 1rem;
    justify-content: space-between;
    align-items: center;
  }
  header .sitename-and-menu .sitename {
    all: revert;
    color: var(--color-white);
    text-decoration: none;
    font-family: var(--font-family-monospace);
    font-weight: bold;
    font-size: 1.5rem;
    border-bottom: 0;
  }
  header .sitename-and-menu .sitename:after {
    all: initial;
  }
</style>

<header>
  <div class="sitename-and-menu">
    <a href="/" class="sitename">&lt;ElkeCodes👩‍💻 /&gt;</a>
    <Navigation />
  </div>
</header>
