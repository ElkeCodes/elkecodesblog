---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";

const { pageTitle } = Astro.props;
---

<style>
  header {
    margin-top: 2rem;
  }
  header .sitename-and-menu {
    display: flex;
    gap: 1rem;
    justify-content: space-between;
    align-items: center;
  }
  header .sitename-and-menu .sitename {
    color: var(--color-white);
    text-decoration: none;
    font-family: var(--font-family-monospace);
    font-weight: bold;
    font-size: 1.5rem;
    border-bottom: 0;
  }
</style>

<header>
  <Hamburger />
  <div class="sitename-and-menu">
    <a href="/" class="sitename">&lt;ElkeCodes👩‍💻 /&gt;</a>
    <Navigation />
  </div>
  <h1>{pageTitle}</h1>
</header>
