---
interface Props extends astroHTML.JSX.AnchorHTMLAttributes {
  href: string;
  title: string;
  actionLabel: string;
}

const { href, title, actionLabel, ...rest } = Astro.props;
---

<a class="card" href={href} {...rest}>
  <h2>{title}</h2>
  <slot />
  {
    actionLabel && (
      <div class="card-actions">
        <button>{actionLabel}</button>
      </div>
    )
  }
</a>

<style>
  .card {
    background: var(--color-gray);
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 1rem;
    transition: transform 0.2s;
    display: block;
    border: 1px solid var(--color-light-gray);
  }
  .card:hover {
    cursor: pointer;
  }
  .card h2 {
    margin-top: 0;
  }
  .card-actions {
    width: 100%;
    text-align: right;
  }
  @media screen and (min-width: 636px) {
    .card {
      border-radius: 1rem;
      padding: 2rem;
      margin-bottom: 2rem;
    }
  }
</style>
