---
import { normalizeText } from "@utils/normalize-text";

interface Props extends astroHTML.JSX.AnchorHTMLAttributes {
  href: string;
  title: string;
  actionLabel?: string;
}

const { href, title, actionLabel, ...rest } = Astro.props;

const id = `card-${normalizeText(title)}`;
---

<a class="card" href={href} {...rest} aria-describedBy={id}>
  <h3 id={id}>{title}</h3>
  <slot />
  <div class="aside-and-actions">
    <slot name="aside" />
    {
      actionLabel && (
        <div class="card-actions">
          <button>{actionLabel}</button>
        </div>
      )
    }
  </div>
</a>

<style>
  .card {
    background: var(--color-gray);
    border-radius: 0.5rem;
    padding: 1rem;
    transition:
      transform 0.2s,
      background-color 0.4s;
    display: block;
    border: 1px solid var(--color-border);
  }
  .card:hover {
    cursor: pointer;
    background: var(--color-dark-gray);
  }
  .card:after {
    all: revert;
  }
  .card h3 {
    margin-top: 0;
    color: var(--color-secondary);
  }
  .card-actions {
    width: 100%;
    text-align: right;
  }
  .aside-and-actions {
    display: flex;
    justify-content: space-between;
  }
  @media screen and (min-width: 636px) {
    .card {
      border-radius: 1rem;
      padding: 2rem;
    }
  }
</style>
